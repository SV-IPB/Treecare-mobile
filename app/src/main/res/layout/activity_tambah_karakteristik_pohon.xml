<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.karakteristik_pohon.TambahKarakteristikPohonActivity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="37dp"/>

    <TextView
        android:id="@+id/tvKarakteristikPohon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karakteristik Pohon"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="71dp"/>

    <TextView
        android:id="@+id/tvKeliling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keliling"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvKarakteristikPohon"
        android:layout_marginTop="35dp"
        android:layout_marginStart="37dp"/>

    <EditText
        android:id="@+id/etKeliling"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:background="@drawable/et_bg"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvKeliling"
        app:layout_constraintEnd_toStartOf="@id/etTinggi"
        android:layout_marginTop="11dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tvTinggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tinggi"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tvKeliling"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvKarakteristikPohon"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="37dp"/>

    <EditText
        android:id="@+id/etTinggi"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:background="@drawable/et_bg"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tvTinggi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTinggi"
        android:layout_marginTop="11dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="37dp"/>

    <TextView
        android:id="@+id/tvLebarTajuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lebar Tajuk"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etKeliling"
        android:layout_marginTop="32dp"
        android:layout_marginStart="37dp"/>

    <EditText
        android:id="@+id/etLebarTajuk"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/et_bg"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLebarTajuk"
        android:layout_marginTop="11dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"/>

    <TextView
        android:id="@+id/tvBentuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bentuk"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etLebarTajuk"
        android:layout_marginTop="32dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"/>

    <Spinner
        android:id="@+id/sBentuk"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBentuk"
        android:layout_marginTop="11dp"
        android:background="@drawable/spinner_bg"
        android:theme="@style/mySpinnerItemStyle"
        android:entries="@array/Bentuk"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"/>

    <TextView
        android:id="@+id/tvCrownRatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Crown Ratio"
        android:fontFamily="@font/poppins_italic"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sBentuk"
        android:layout_marginTop="32dp"
        android:layout_marginStart="37dp"/>

    <EditText
        android:id="@+id/etCrownRatio"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/et_bg_ratio"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCrownRatio"
        android:layout_marginTop="11dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"/>

    <TextView
        android:id="@+id/tvSejarahPemangkasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sejarah Pemangkasan"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etCrownRatio"
        android:layout_marginTop="32dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"/>

    <Spinner
        android:id="@+id/sSejarahPemangkasan"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSejarahPemangkasan"
        android:layout_marginTop="11dp"
        android:background="@drawable/spinner_bg"
        android:theme="@style/mySpinnerItemStyle"
        android:entries="@array/SejarahPemangkasan"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSelanjutnya"
        android:layout_width="255dp"
        android:layout_height="42dp"
        android:text="Selanjutnya"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:background="@drawable/btn_bg_peta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>